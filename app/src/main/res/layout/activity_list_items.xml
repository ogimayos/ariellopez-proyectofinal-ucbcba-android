<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ariel.ventas_moviles.ListItems">
    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtListItemsNombreCliente"
        android:visibility="gone"

        />
    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtListItemsNombreCliente"
        android:id="@+id/txtListItemsidCliente"
        android:visibility="gone"
        />
    <TextView android:text="0" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtListItemsidCliente"
        android:id="@+id/txtListItemsidPedido"
        android:visibility="gone"
        />
    <TextView android:text="0" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtListItemsidPedido"
        android:id="@+id/txtListItemsNitCliente"
        android:visibility="gone"
        />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItems"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtListItemsNitCliente"/>

</RelativeLayout>
